<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Online Expense Tracker</display-name>

    <!-- Session timeout in minutes -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Servlets configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExpenseServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.AddExpenseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditExpenseServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.EditExpenseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteExpenseServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.DeleteExpenseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewExpensesServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.ViewExpensesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.expensetracker.servlet.DashboardServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExpenseServlet</servlet-name>
        <url-pattern>/add-expense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditExpenseServlet</servlet-name>
        <url-pattern>/edit-expense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteExpenseServlet</servlet-name>
        <url-pattern>/delete-expense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewExpensesServlet</servlet-name>
        <url-pattern>/view-expenses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Welcome / landing page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

